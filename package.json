{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Stunning developer portfolio with React, Node.js, and Neon PostgreSQL",
  "scripts": {
    "install:all": "cd client && npm install && cd ../server && npm install",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build": "cd client && npm run build",
    "start": "cd server && NODE_ENV=production npm start",
    "postinstall": "npm run install:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["portfolio", "react", "nodejs", "tailwindcss", "neon", "postgresql"],
  "author": "Your Name",
  "license": "MIT"
}
